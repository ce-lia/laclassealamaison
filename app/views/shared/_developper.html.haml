- if Rails.env.development?
  .dev_banner
    - if current_user
      = form_for(current_user, url: impersonate_administration_users_path) do
        %select{name: :user_id, onchange: 'Rails.fire(this.form, "submit")', class: 'appearance-none bg-white border border-gray-400 hover:border-gray-500 px-4 py-2 pr-8 rounded shadow leading-tight focus:outline-none focus:shadow-outline'}
          - User.find_each do |u|
            %option{value: u.id, selected: u == current_user}= u.email
        %input{type: 'submit',class: 'flex-shrink-0 bg-teal-500 hover:bg-teal-700 border-teal-500 hover:border-teal-700 text-sm border-4 text-white py-1 px-2 rounded'}
