<% flash.each do |key, values| %>
<div class="mt-4">
  <% if key == "alert" %>
    <% [values].flatten.each do |value| %>
      <div class="flex items-center bg-orange-500 text-white text-sm font-bold px-4 py-3 my-3 rounded-sm" role="alert">
        <i class="fa fa-exclamation-circle mr-2"></i>
        <p class="mb-0 text-white"><%= value %></p>
      </div>
    <% end %>
  <% else %>
    <% [values].flatten.each do |value| %>
    <div class="flex items-center bg-blue-500 text-white text-sm font-bold px-4 py-3 my-3 rounded-sm" role="alert">
      <i class="fa fa-info mr-2"></i>
      <p class="mb-0 text-white"><%= value %></p>
    </div>
    <% end %>
  <% end %>
</div>
<% end %>
